<div id="trip">
  <table>
  <tr>
    <td> 
    <div id="title">
      <%= @trip.has_driver ? "I have an open seat in my car!" : "I'm looking for a ride!"%>
    </div>
    <div id="user_link">
	  <% if current_user %>
	      <% if current_user.uid == @trip.user.uid %>
          <%= link_to(image_tag('delete-button.png'), @trip, :method => :delete, :confirm => 'Are you sure you want to delete this trip?') %>
        <% else %>
          <%= link_to @trip.user.name, @trip.user.url %> 
        <% end %>  
 	  <% else %>
        <%= link_to 'Login', "/auth/facebook" %> to see who posted this ride!
	  <% end %>
    </div>
    <br />
    <div id="from" class="white_circle"> 
      <%= @trip.start_location.name %>
    </div>
    <%= image_tag "right-arrow.png", :width => "130px", :id => "arrow" %>
    <div id="to" class="white_circle">
      <%= @trip.finish_location.name %>
    </div>
    <div class="clear"></div>

    <div id="map"></div>
    </td>
    <td>
      <div id="comments">
        <div id="fb-root"></div>
        <div class="fb-comments" data-href=<%= request.url %> data-num-posts="10" data-width="470"></div>
      </div>
    </td>
  </table>
</div>
